@model ASR.Models.Slot

@{
    ViewData["Title"] = "Slot Edit";
    Layout = "_Layout";
}

@section navigation
    {
    @await Html.PartialAsync("_StaffPartialView");
}

<h2>Edit</h2>


@if (ViewBag.Message != "")
{
    <h2>@ViewBag.Message</h2>

    <div>
        <a asp-action="ListSlots" asp-route-id="@ViewBag.id">Show List Slot</a>
    </div>
}
else
{
    <h4>Room name     : @Model.Room.RoomName </h4>
    <h4>Schedule time : @Model.StartTime </h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="SlotEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomID" />
                <input type="hidden" asp-for="StartTime" />
                <div class="form-group">
                    <label asp-for="StaffID" class="control-label"></label>
                    <select asp-for="StaffID" class="form-control" asp-items="ViewBag.StaffID"></select>
                    <span asp-validation-for="StaffID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentID" class="control-label"></label>
                    <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                    <span asp-validation-for="StudentID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}



