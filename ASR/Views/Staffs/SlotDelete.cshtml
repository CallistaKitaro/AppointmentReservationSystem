@model ASR.Models.Slot

@{
    ViewData["Title"] = "SlotDelete";
    Layout = "_Layout";
}

@section navigation{
    <partial name="_SidebarNav" />
}

    <div class="body-content content-area">
        <h2>Slot Delete Confirm</h2>
        <hr />

        @if (ViewBag.Message != "")
        {
            <div class="alert alert-dismissible alert-warning">
                <p>@ViewBag.Message</p>
                <a class="btn btn-success" asp-action="Index" asp-route-id="@ViewBag.id">Home</a>
                <a class="btn btn-danger" asp-action="ListSlots" asp-route-id="@ViewBag.id">Remove other Slots</a>
            </div>
        }
        else
        {
            <form asp-action="SlotDelete" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="RoomID" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Room.RoomName"></label>
                    <input type="text" asp-for="Room.RoomName" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="StartTime"></label>
                    <input type="text" asp-for="StartTime" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="StaffID"></label>
                    <input type="text" asp-for="StaffID" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-success" />
                    <a asp-action="ListSlots" asp-route-id="@ViewBag.id" class="btn btn-danger">Back</a>
                </div>
            </form>
        }

    </div>
