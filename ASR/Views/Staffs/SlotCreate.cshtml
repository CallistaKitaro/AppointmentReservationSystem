@model ASR.Models.Slot

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

@section navigation{
    @await Html.PartialAsync("_StaffPartialView")
}

<h2>Create a Slot</h2>

<h4>Student Name : @ViewBag.StaffName </h4>
<hr />

@if (ViewBag.ErrMessage != "")
{
    <h2>@ViewBag.ErrMessage</h2>

    <div>
        <a asp-action="SlotCreate" asp-route-id="@ViewBag.id">Create New Slot</a>
    </div>

}else if (ViewBag.Message != "")
{
    <h2>@ViewBag.Message</h2>

    <div>
        <a asp-action="ListSlots" asp-route-id="@ViewBag.id">Show List Slot</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SlotCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoomID" class="control-label"></label>
                    <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="StartHour" name="StartHour" class="control-label">Time</label>
                    <select for="StartHour" name="StartHour" class="form-control" asp-items="ViewBag.StartHour"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StaffID" class="control-label"></label>
                    <input type="text" asp-for="StaffID" class="form-control" value="@ViewBag.StaffID" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Slot Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}



