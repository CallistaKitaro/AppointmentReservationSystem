@model ASR.Models.Slot

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

@section  navigation
{
    @await Html.PartialAsync("_StudentPartialView")
}

<h2>Slot Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            Time
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime.TimeOfDay)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Staff)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Staff.StaffID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.StudentID)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "SlotEdit", new { RoomId = Model.RoomID, StartTime = Model.StartTime.ToString("dd/MM/yyyy HH:mm") }) |
    @Html.ActionLink("Back to List", "ListSlot", new { id = $"{@ViewBag.id}@rmit.edu.au" })
    <!-- <a asp-action="ListSlots" asp-route-id="@ViewBag.id">Back to List</a> -->
</div>
